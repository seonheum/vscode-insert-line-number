{
	"name": "insert-line-number",
	"displayName": "Insert Line Number",
	"description": "Insert line numbers to selected lines or the whole document.",
	"license": "MIT",
	"version": "1.1.0",
	"icon": "vscode-insert-line-number.png",
	"keywords": [
		"line number"
	],
	"author": {
		"name": "anders-liu"
	},
	"homepage": "https://github.com/anders-liu/vscode-insert-line-number",
	"repository": {
		"type": "git",
		"url": "https://github.com/anders-liu/vscode-insert-line-number"
	},
	"bugs": {
		"url": "https://github.com/anders-liu/vscode-insert-line-number/issues"
	},
	"publisher": "andersliu",
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Formatters"
	],
	"activationEvents": [
		"onCommand:extension.insertLineNumber"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.insertLineNumber",
				"title": "Insert Line Number"
			}
		],
		"configuration": {
			"title": "Insert Line Number",
			"properties": {
				"InsertLineNumber.formats": {
					"type": "array",
					"default": [
						{
							"align": "right",
							"width": "alignToLast"
						},
						{
							"width": "alignToLast"
						},
						{},
						{
							"start": "current",
							"align": "right",
							"padding": "zero",
							"width": 6,
							"prefix": "[CODE_",
							"suffix": "]    "
						},
						{
							"skipNumber": true,
							"prefix": "// ",
							"suffix": ""
						}
					],
					"description": "Line number formats. Property skipNumber (boolean) - when true, only prefix + suffix are inserted without numeric line number."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^8.10.25",
		"@types/vscode": "^1.102.0",
		"tslint": "^5.8.0",
		"typescript": "^5.4.0",
		"vscode": "^1.1.25"
	}
}
